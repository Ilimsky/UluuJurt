<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Branches.ContentForBranches">

        <view
            android:id="@+id/youtubePlay"
            class="com.google.android.youtube.player.YouTubePlayerView"
            id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:padding="10dp"
                android:id="@+id/v_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="#война #Азия #Сирия"
                android:textColor="#3EA6FF" />

            <TextView
                android:id="@+id/v_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Война в Сирии и насильственный экстремизм"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/v_content"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:padding="5dp"
                android:text="Что заставляет молодых людей бросать своих родных и вступать в террористические организации? Какие последствия для семей и общества несёт #война в Сирии? Какие меры принимаются в разных странах этого региона для противодействия насильственному экстремизму?"
                android:textSize="18dp" />

        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/fab_margin"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:src="@drawable/ic_share_white_24dp"
        app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.972" />
</androidx.constraintlayout.widget.ConstraintLayout>